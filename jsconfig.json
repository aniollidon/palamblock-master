{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/renderer/js/core/*"],
      "@utils/*": ["src/renderer/js/utils/*"],
      "@views/*": ["src/renderer/js/views/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "checkJs": false,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ]
}
