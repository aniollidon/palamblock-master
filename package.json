{
  "name": "palammaster",
  "version": "1.0.0",
  "description": "PalamMaster - Aplicaci贸 d'administraci贸 Electron per PalamBlock",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "publish": "electron-builder --publish always",
    "publish-win": "electron-builder --win --publish always",
    "publish-linux": "electron-builder --linux --publish always",
    "publish-mac": "electron-builder --mac --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "palamblock",
    "admin",
    "education",
    "classroom"
  ],
  "author": {
    "name": "PalamBlock Team",
    "email": "aniollidon@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "crypto-js": "^4.2.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "socket.io-client": "^4.7.5"
  },
  "build": {
    "appId": "com.palamblock.master",
    "productName": "PalamBlock",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "aniollidon",
      "repo": "palamblock-master",
      "releaseType": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/palamblock-logo.ico",
      "publisherName": "PalamBlock Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PalamBlock",
      "perMachine": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/palamblock-logo.png",
      "category": "Education",
      "description": "Aplicaci贸 d'administraci贸 per PalamBlock"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/palamblock-logo.icns",
      "category": "public.app-category.education"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aniollidon/palamblock-master.git"
  }
}
