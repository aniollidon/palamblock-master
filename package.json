{
  "name": "palammaster",
  "version": "1.0.0",
  "description": "PalamMaster - Aplicació d'administració Electron per PalamBlock",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "palamblock",
    "admin",
    "education",
    "classroom"
  ],
  "author": "PalamBlock Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "socket.io-client": "^4.7.5",
    "crypto-js": "^4.2.0"
  },
  "build": {
    "appId": "com.palamblock.master",
    "productName": "PalamMaster",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Education"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}
